# Используйте официальный образ Go как базовый образ для сборки
FROM golang:1.23.0 AS builder

# Установите рабочую директорию
WORKDIR /app

# Скопируйте go mod и sum файлы
COPY go.mod go.sum ./

# Загрузите зависимости
RUN go mod download

# Скопируйте исходный код
COPY . .

# Соберите приложение
RUN go build -o main ./cmd

# Используйте минимальный образ для выполнения приложения
FROM alpine:latest


# Скопируйте исполняемый файл из стадии сборки
COPY --from=builder /app/main .


# Откройте порт, который использует приложение
EXPOSE 8080

# Запустите приложение
CMD ["./main"]

